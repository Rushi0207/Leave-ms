<% include ./partial/header %>
<div
  class="container"
  style=" position: relative;
border-radius: 5px;
background-color: #f2f2f2;
padding: 100px 0 30px 0;
width: 40%;
font-style:arial;
"
>
  
      <form action="/hod/<%=hod._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center;">EDIT PROFILE <%= hod.name%></h1>
            <div class="form-group form-inline">
                <label for="name" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">NAME</label>
              <input
                class="form-control"
                type="text"
                id="name"
                value="<%= hod.name%>"
                name="hod[name]"
              />
            </div>
            <div class="form-group form-inline">
                <label for="username" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">EMAIL ID</label>
              <input
                class="form-control"
                type="text"
                id="username"
                value="<%= hod.username%>"
                name="hod[username]"
              />
            </div>
            <div class="form-group form-inline">
                <label for="department" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">DEPARTMENT</label>
              <input
                class="form-control"
                type="text"
                id="department"
                value="<%= hod.department%>"
                name="hod[department]"
              />
            </div>

            <div class="form-group form-inline">
                <label for="url" style="width: 200px;
                display: inline-block;
                text-align: right;
                ">IMAGE URL</label>
              <input
                class="form-control"
                type="text"
                id="url"
                value="<%= hod.image%>"
                name="hod[image]"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-default btn-block">Submit</button>
            </div>
          </div>
        </div>
      </form>
      <a href="/hod/profile">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
