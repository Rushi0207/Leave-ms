<% include ./partial/header %>
<div
  class="container"
  style=" position: relative;
border-radius: 5px;
background-color: #f2f2f2;
padding: 60px 0 30px 0;
width: 40%;

"
>

    
    
      <form action="/professor/<%=professor._id%>?_method=PUT" method="POST" style="margin-top: 20px;">
        <div class="row">
          <div class="col">
              <h1 style="text-align:center;">Edit Profile <%= professor.name%></h1>
              <div class=" form-group form-inline">
                  <label for="name" style="width: 200px;
                  display: inline-block;
                  text-align: right;
                  ">Name</label>
                  <input
                    class="form-control"
                    type="text"
                    id="name"
                    value="<%= professor.name%>"
                    name="professor[name]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="emailId" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Email ID</label>
                  <input
                    class="form-control"
                    type="text"
                    id="emailId"
                    value="<%= professor.emailId%>"
                    name="professor[emailId]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="department" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Department</label>
                  <input
                    class="form-control"
                    type="text"
                    id="department"
                    value="<%= professor.department%>"
                    name="professor[department]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="mobileno" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Mobile no.</label>
                  <input
                    class="form-control"
                    type="text"
                    id="mobileno"
                    value="<%= professor.mobileno%>"
                    name="professor[mobileno]"
                  />
                </div>
                <div class=" form-group form-inline">
                    <label for="url" style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    ">Image-url</label>
                  <input
                    class="form-control"
                    type="text"
                    id="url"
                    value="<%= professor.image%>"
                    name="professor[image]"
                  />
                </div>
                <div class="form-group">
                  <button class="btn btn-lg btn-default btn-block">Submit</button>
                </div>
          </div>
        </div>
        
      </form>
      <a href="/professor/<%= professor.id%>">Back</a>
    </div>
  </div>
</div>

<% include ./partial/footer %>
