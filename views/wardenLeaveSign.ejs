<% include ./partial/header %> <% include ./partial/wardenfunction%>
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
    max-width: 70%;
    margin-left: 431px;
    margin-top: -320px ;  text-align: -webkit-center; font-style:arial;"
>
  <table
    class="content-table"
    style="margin: 50px auto;min-width:400px;width: 90%; box-shadow: 0 0 20px rgba(0,0,0,0.15);"
  >
    <tr
      style="background-color: #4caf50; border-radius: 5px 5px 0 0;overflow: hidden;  color: #ffffff;text-align: left; font-weight: bold;"
    >
      <th>
        PROFESSOR NAME
      </th>
      <th>DEPARTMENT</th>
      <th>
        FROM DATE
      </th>
      <th>TO DATE</th>
      <th>DAYS</th>
      <th>STATUS</th>
      <th></th>
    </tr>
    <%students.forEach(function(student){%> <% if(student.leaves.length>0){%>
    <tr>
      <th><%=student.name%></th>
      <th><%=student.department%></th>
      <%student.leaves.forEach(function(leave){%>
      <td><%=moment(leave.from).format('DD/MM/YYYY')%></td>
      <td><%=moment(leave.to).format('DD/MM/YYYY')%></td>
      <td><%=leave.days%></td>
      <td><%=leave.wardenstatus%></td>

      <td>
        <%if(leave.wardenstatus==="pending"){%>
        <a
          href="/warden/<%=warden.id%>/leave/<%=student.id%>/info"
          class="btn btn-block btn-success"
          >more info</a
        >
        <%}%>
      </td>
      <%})}%> <%})%>
    </tr>
  </table>
</div>

<% include ./partial/footer %>
