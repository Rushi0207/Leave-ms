<% include ./partial/header %> <% include ./partial/studfunction %> 
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
max-width: 60%;
margin-left: 431px;
margin-top: -380px;  text-align: -webkit-center; font-style:arial;"
>
<div class="container" >
    <table class="content-table"
    style="margin: 50px auto;min-width:800px;width: 90%; box-shadow: 0 0 20px rgba(0,0,0,0.15);">
      <tr
      style="background-color: #4caf50; border-radius: 5px 5px 0 0;overflow: hidden;  color: #ffffff;text-align: left; font-weight: bold;"
      >
        <th>
          LEAVE TYPE
        </th>
        <th>
          FROM DATE
        </th>
        <th>TO DATE</th>
        <th>DAYS</th>
        <th>HOD Status</th>
        <th>ADMIN Status</th>
        <th>FINAL Status</th>
        
      </tr>
      <%student.leaves.forEach(function(leave){%>

      <tr>
        <td><%=leave.subject%></td>
        <td><%=moment(leave.from).format('DD/MM/YYYY')%></td>
        <td><%=moment(leave.to).format('DD/MM/YYYY')%></td>
        <td><%=leave.days%></td>
        <td><%=leave.status%></td>
        <td><%=leave.wardenstatus%></td>
        <%if(leave.status==="approved" && leave.wardenstatus==="approved"){%>
         <%leave.finalstatus="approved"%>
        <%}%>
        <%if(leave.status==="denied" && leave.wardenstatus==="denied"){%>
          <%leave.finalstatus="denied"%>
         <%}%>
         <%if(leave.status==="denied" && leave.wardenstatus==="approved"){%>
          <%leave.finalstatus="denied"%>
         <%}%>
         <%if(leave.status==="approved" && leave.wardenstatus==="denied"){%>
          <%leave.finalstatus="denied"%>
         <%}%>
        <td><%=leave.finalstatus%></td>
      </tr>

      <%})%>
    </table>
  </div>
  </div>
  







</div>










