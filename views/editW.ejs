<% include ./partial/header %>
<div class="container"
style=" position: relative;
border-radius: 5px;
background-color: #f2f2f2;
padding: 60px 0 30px 0;
width: 40%;

font-style:arial;
">
  
      <form action="/warden/<%=warden._id%>?_method=PUT" method="POST">
        <div class="row">
          <div class="col">
            <h1 style="text-align:center;">EDIT PROFILE</h1>
            <div class="form-group form-inline">
              <label
                for="name"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >NAME :</label
              >
              <input
                class="form-control"
                type="text"
                id="name"
                value="<%= warden.name%>"
                name="warden[name]"
              />
            </div>
            <div class="form-group form-inline">
              <label
                for="username"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >EMAIL ID :</label
              >
              <input
                class="form-control"
                type="text"
                id="username"
                value="<%= warden.username%>"
                name="warden[username]"
              />
            </div>
            <div class="form-group form-inline">
              <label
                for="hostel"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >MOBILE NO. :</label
              >
              <input
                class="form-control"
                type="text"
                id="hostel"
                value="<%= warden.hostel%>"
                name="warden[hostel]"
              />
            </div>

            <div class="form-group form-inline">
              <label
                for="url"
                style="width: 200px;
                    display: inline-block;
                    text-align: right;
                    "
                >IMAGE URL :</label
              > 
              <input
                class="form-control"
                type="text"
                id="url"
                value="<%= warden.image%>"
                name="warden[image]"
              />
            </div>
            <div class="form-group">
              <button class="btn btn-lg btn-primary btn-block"><strong>SUBMIT</strong></button>
            </div>
          </div>
        </div>
      </form>
      <a href="/warden/profile">BACK</a>
    </div>
  
<% include ./partial/footer %>
